{
  "name": "Appointment API",
  "description": "Laravel API for Appointment Management System",
  "keywords": ["laravel", "api", "appointment"],
  "website": "https://your-app.herokuapp.com",
  "repository": "https://github.com/yourusername/appointment-db",
  "success_url": "/",
  "env": {
    "APP_ENV": {
      "description": "Application environment",
      "value": "production"
    },
    "APP_DEBUG": {
      "description": "Application debug mode",
      "value": "false"
    },
    "APP_KEY": {
      "description": "Application key",
      "generator": "secret"
    },
    "DB_CONNECTION": {
      "description": "Database connection",
      "value": "mysql"
    }
  },
  "addons": [
    "cleardb:ignite"
  ],
  "buildpacks": [
    {
      "url": "heroku/php"
    }
  ]
}
